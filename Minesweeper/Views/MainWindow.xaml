<Window x:Class="Minesweeper.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper.Views"
        mc:Ignorable="d"
        Title="Minesweeper" Height="675" Width="1200" FontFamily="Quicksand">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="{Binding GradientLeft, FallbackValue='#4568DC'}" Offset="0"/>
                <GradientStop Color="{Binding GradientRight, FallbackValue='#B06AB3'}" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ContentControl Content="{Binding SelectedViewModel}"/>
    </Grid>
</Window>
