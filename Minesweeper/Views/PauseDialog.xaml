<Window x:Class="Minesweeper.Views.PauseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper.Views"
        mc:Ignorable="d"
        Title="PauseDialog" Height="200" Width="300" 
        WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterOwner">
    <Window.Background>
        <SolidColorBrush Opacity="0.9" Color="Black"/>
    </Window.Background>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Viewbox>
            <Label Content="Pause" Foreground="BlanchedAlmond"/>
        </Viewbox>
        <UniformGrid HorizontalAlignment="Center" Rows="1" Columns="2" Grid.Row="2" Margin="15">
            <Button IsCancel="True" Content=" Resume " Margin="5"/>
            <Button x:Name="ResumeButton" Content=" Main menu " Margin="5" Command="{Binding SetDialogResultTrueCommand}" CommandParameter="{x:Reference ResumeButton}"/>
        </UniformGrid>
    </Grid>
</Window>

