<UserControl x:Class="Minesweeper.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Minesweeper.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <RadioButton Content="Can You Feel The Love Tonight" IsChecked="True" Foreground="BlanchedAlmond"/>
            <RadioButton Content="Cool Blues" Foreground="BlanchedAlmond"/>
            <RadioButton Content="Witching Hour" Foreground="BlanchedAlmond"/>
        </StackPanel>
    </Grid>
</UserControl>
