<UserControl x:Class="Minesweeper.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resources="clr-namespace:Minesweeper.Resources"
             xmlns:local="clr-namespace:Minesweeper.Views"
             mc:Ignorable="d" FontFamily="Quicksand"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="Quicksand-Light">
            <Setter Property="TextElement.FontFamily" Value="/Minesweeper;Component/Fonts/#Quicksand"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Viewbox VerticalAlignment="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1" Grid.Column="1">
                    <Button Margin="10" Command="{Binding OpenGameViewCommand}" Style="{StaticResource MenuButton}">
                        <TextBlock>
                            New game
                        </TextBlock>
                    </Button>
                    <Button Margin="10" Command="{Binding OpenSettingsViewCommand}" Style="{StaticResource MenuButton}">
                        <TextBlock>
                            Settings
                        </TextBlock>
                    </Button>
                    <Button Margin="10" Command="{Binding OpenCreditsViewCommand}" Style="{StaticResource MenuButton}">
                        <TextBlock>
                            Credits
                        </TextBlock>
                    </Button>
                </StackPanel>
            </Grid>
        </Viewbox>
        <Viewbox Grid.Column="1" VerticalAlignment="Top" Margin="0 50 0 0">
            <resources:GameTitle/>
        </Viewbox>
    </Grid>
</UserControl>
